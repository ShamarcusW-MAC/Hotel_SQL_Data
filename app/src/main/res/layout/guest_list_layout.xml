<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/textColor">


    <TextView
        android:id="@+id/room_textview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:textColor="@color/backgroundColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight=".15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="332" />

    <TextView
        android:id="@+id/guest_name_textview"
        android:layout_width="111dp"
        android:layout_height="24dp"
        android:layout_marginStart="136dp"
        android:textColor="@color/backgroundColor"
        app:layout_constraintHorizontal_weight=".85"
        app:layout_constraintStart_toEndOf="@id/room_textview"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Guest Name" />

    <TextView
        android:id="@+id/numberofnights_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:textColor="@color/backgroundColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guest_name_textview"
        app:layout_constraintTop_toBottomOf="@id/guest_name_textview"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Number of Nights" />
</androidx.constraintlayout.widget.ConstraintLayout>